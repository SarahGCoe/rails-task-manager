<%= form_for(task) do |f| %>
<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
  </div>

<div class="form-group">
  <%= f.label :details %>
  <%= f.text_area :details, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label "Task completed" %> <br />
    <%= f.check_box :completed %> <br />
</div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
